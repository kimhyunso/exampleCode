<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
	

	<resource-ref>
		<res-ref-name>jdbc/itbank2_pool</res-ref-name>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>kr.co.itbank.bbs.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/index/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>kr.co.itbank.bbs.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/index/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>checkID</servlet-name>
		<servlet-class>kr.co.itbank.bbs.CheckID</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>checkID</servlet-name>
		<url-pattern>/index/checkID</url-pattern>
	</servlet-mapping>

</web-app>